# Google Gemini AI API Key (Required)
# Get your key from: https://ai.google.dev/
# SECURITY: Use GEMINI_API_KEY (server-only) instead of NEXT_PUBLIC_API_KEY
# to keep your API key secure and not exposed to the browser
GEMINI_API_KEY=your_gemini_api_key_here
# DEPRECATED: NEXT_PUBLIC_API_KEY is kept for backward compatibility during migration
# NEXT_PUBLIC_API_KEY=your_gemini_api_key_here

# Clerk Authentication (Required for user authentication)
# Get your key from: https://clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Brave Search API (Optional - enhances trend discovery)
# Get your key from: https://brave.com/search/api/
NEXT_PUBLIC_BRAVE_API_KEY=your_brave_api_key_here

# Grok (X.AI) API (Optional - enhances trend discovery)
# Get your key from: https://x.ai/
NEXT_PUBLIC_GROK_API_KEY=your_grok_api_key_here

# Cloudflare R2 Storage (Required for production - stores images and research data)
# Get credentials from Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=turbomerch
R2_PUBLIC_URL=https://pub-YOUR_ACCOUNT_ID.r2.dev  # Or custom domain

# Stripe (Required for payments)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Stripe Price IDs (Required for subscription tiers)
# Get these from: https://dashboard.stripe.com/products
STRIPE_PRICE_STARTER=price_xxx
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_BUSINESS=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx

# Database (Required)
DATABASE_URL=postgresql://user:password@host:5432/database

# App URL (Required for Stripe redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Vectorizer.AI (Optional - for image vectorization)
# Get your API credentials from: https://vectorizer.ai/api
# Used to convert generated images to high-quality vectorized PNGs
VECTORIZER_API_ID=your_vectorizer_api_id
VECTORIZER_API_SECRET=your_vectorizer_api_secret

# Vectorizer Feature Toggle
# Set to 'true' to enable HD Vector PNG downloads, 'false' to hide the feature entirely
NEXT_PUBLIC_VECTORIZER_ENABLED=false

# Decodo/Smartproxy eCommerce Scraping API (Optional - enhances trend validation)
# Get your credentials from: https://decodo.com/scraping/ecommerce
# Used to gather marketplace intelligence from Amazon/Etsy for trend validation
# If not configured, the system continues to work without marketplace data
DECODO_USERNAME=your_decodo_username
DECODO_PASSWORD=your_decodo_password

# Marketplace Intelligence Feature Toggle
# Set to 'true' to enable marketplace data in trend research
NEXT_PUBLIC_MARKETPLACE_ENABLED=false
